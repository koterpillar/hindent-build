{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':automergeMinor',
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/^version.yaml$/',
      ],
      matchStrings: [
        '(?<depName>[a-z]+): "(?<currentValue>[0-9.]+)"',
      ],
      datasourceTemplate: 'hackage',
    },
  ],
}
